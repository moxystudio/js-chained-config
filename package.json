      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "eslint": "^5.3.0",
    "eslint-config-moxy": "^6.0.1",
    "husky": "^1.0.0",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "standard-version": "^4.4.0"
  },
  "dependencies": {
    "class-is": "^1.1.0",
    "deepmerge": "^2.1.1",
    "lodash.wrap": "^4.1.1"
